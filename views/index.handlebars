
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{ keyword }}" class="form-control" placeholder="輸入餐廳名稱、類別、描述" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>



<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="mb-3 d-flex justify-content-between">
        <a href="/restaurants/new" class="btn btn-warning">新增餐廳</a>

        <div class="dropdown">
          <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            排序：{{ sortType }}
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            {{#if keyword}}
            <li><a class="dropdown-item" href="?keyword={{ keyword }}&OM=1">餐廳名稱：A → Z</a></li>
            <li><a class="dropdown-item" href="?keyword={{ keyword }}&OM=2">餐廳名稱：Z → A</a></li>
            <li><a class="dropdown-item" href="?keyword={{ keyword }}&OM=3">評分：高 → 低</a></li>
            <li><a class="dropdown-item" href="?keyword={{ keyword }}&OM=4">類別</a></li>
            <li><a class="dropdown-item" href="?keyword={{ keyword }}&OM=5">地區</a></li>
            {{else}}
            <li><a class="dropdown-item" href="?OM=1">餐廳名稱：A → Z</a></li>
            <li><a class="dropdown-item" href="?OM=2">餐廳名稱：Z → A</a></li>
            <li><a class="dropdown-item" href="?OM=3">評分：高 → 低</a></li>
            <li><a class="dropdown-item" href="?OM=4">類別</a></li>
            <li><a class="dropdown-item" href="?OM=5">地區</a></li>
            {{/if}}
          </ul>
        </div>
      </div>

      <div class="card-columns">

        {{#each restaurants}}
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="mt-2 d-flex justify-content-end">
                  <a href="/restaurants/{{ this._id }}/edit" class="btn btn-outline-dark btn-sm mr-2">編輯</a>
                  <a href="/restaurants/{{ this._id }}" class="btn btn-outline-info btn-sm mr-2">瀏覽</a>
                  <form action="./restaurants/{{ this._id }}/?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-outline-warning btn-sm">刪除</button>
                  </form>
                </div>
              </div>
            </div>
        {{/each}}
        
      </div>
    </div>
  </div>
</div>