<div class="row mt-5 mb-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="form-group mt-2">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name" value="{{name}}">
        </div>
        <div class="form-group mt-2">
          <label for="email">Email (必填)*</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}" required>
        </div>
        <div class="form-group mt-2">
          <label for="password">Password (必填)*</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{password}}" required>
        </div>
        <div class="form-group mt-2">
          <label for="confirmedPassword">Confirm password (必填)*</label>
          <input type="password" id="confirmedPassword" name="confirmedPassword" class="form-control" placeholder="Enter password again" value="{{confirmedPassword}}" required>
        </div>
        <div class="d-grid gap-2 mb-2">
          <button type="submit" class="btn btn-primary btn-block mt-4">Register</button>
        </div>
        <div class="d-grid gap-2 mb-2">
          <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
        </div>
      </form>

      <p class="lead mt-4">
        <a href="/users/login">Login｜登入</a>
      </p>     
    </div>
  </div>
</div>